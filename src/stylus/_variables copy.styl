// Параметры шрифта
$font = {
  style: normal,
  variant: normal,
  weight: 400,
  size: 12pt,
  height: 1,
  family: "'Scada', Arial, Helvetica, sans-serif"
}

// Num columns in responsive layout grid
$grid = 12

// Layouts breakpoints
$pageLayout = {
  screens: 0 288 360 432 1296,
  default: 3,
  maxWidth: 720 720 720 720 864,
  marginSafe: 12 12 12 12 24,
  marginPage: 0 6 12 18 24,
  bgColor: {
    light: #fff,
    // light: #fafafa,
    dark: #121212,
    // dark: #001f3f,
    // dark: #1b2120,
    // dark: #1b2225,
  }
}

// Title options
$title = {
  fontSize: 21 24 30 36 48,
  lineHeight: 28 36 44 52 60,
  marginTop: 32 48 64 96 128,
  fontFamily: "'Scada', Arial, Helvetica, sans-serif",
  textColor: {
    light: rgba(0, 0, 0, .88),
    dark: rgba(255, 255, 255, .88),
  }
}

// Info options
$articleInfo = {
  fontSize: 10 11 12 14 16,
  lineHeight: 12 12 16 20 24,
  marginVertical: 12 12 12 12 12,
  fontFamily: "'Scada', Arial, Helvetica, sans-serif",
  textColor: {
    light: rgba(0, 0, 0, .48),
    dark: rgba(255, 255, 255, .48),
  }
}

// Paragraph options
$paragraph = {
  fontSize: 14 16 18 21 24,
  lineHeight: 24 28 32 36 40,
  fontFamily: "'Lora', Georgia, serif",
  textColor: {
    light: rgba(0, 0, 0, .88),
    dark: rgba(255, 255, 255, .88),
    // light: #001f3f,
    // dark: #fff,
  }
}

// Figure options
$articleFigure = {
  fontSize: 11 12 14 16 18,
  lineHeight: 16 16 20 20 24,
  fontFamily: "'Scada', Arial, Helvetica, sans-serif",
  textColor: {
    light: rgba(0, 0, 0, .64),
    dark: rgba(255, 255, 255, .64),
  }
}

// Subtitle options
$subtitle = {
  fontSize: 18 21 24 27 30,
  // fontSize: 16 18 21 24 27,
  lineHeight: 28 32 36 40 44,
  // lineHeight: 24 28 32 36 40,
  marginTop: 8 12 12 16 16,
  fontFamily: "'Scada', Arial, Helvetica, sans-serif",
  textColor: {
    light: rgba(0, 0, 0, .88),
    dark: rgba(255, 255, 255, .88),
  }
}

// Sides options
$side = {
